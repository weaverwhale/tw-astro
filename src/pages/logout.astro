---
import { siteName } from '@/constants'
import Layout from '@/layouts/Layout.astro'

const shop = Astro.cookies.get('shop')?.value ?? null
Astro.cookies.delete('shop')
Astro.cookies.delete('token')

const title = `Logging out | ${siteName}`
const description = `Logging out from ${shop}`
---

<Layout title={title} description={description}>
  <div
    class="max-w-screen-xl m-auto flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8 pt-20"
  >
    <div class="flex flex-col items-center justify-center">
      <h1 class="text-3xl font-bold mb-4">Logging you out..</h1>
      <p class="text-gray-600">You will be redirected to the login page in a few seconds.</p>
    </div>
  </div>
</Layout>

<script>
  setTimeout(() => {
    window.location.href = '/'
  }, 1500)
</script>
